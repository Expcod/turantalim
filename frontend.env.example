# Turantalim Frontend Environment Variables
# Copy this file to .env and update with your actual values

# API Configuration
NUXT_PUBLIC_API_BASE_URL=http://localhost:8000
NUXT_PUBLIC_MEDIA_URL=http://localhost:8000/media

# Authentication
NUXT_PUBLIC_TOKEN_KEY=turantalim_access_token
NUXT_PUBLIC_REFRESH_TOKEN_KEY=turantalim_refresh_token

# File Upload Limits (in bytes)
NUXT_PUBLIC_MAX_IMAGE_SIZE=10485760  # 10 MB
NUXT_PUBLIC_MAX_AUDIO_SIZE=52428800  # 50 MB

# Accepted File Types
NUXT_PUBLIC_IMAGE_TYPES=image/jpeg,image/png
NUXT_PUBLIC_AUDIO_TYPES=audio/mpeg,audio/wav,audio/webm,audio/ogg

# Development/Production Mode
NODE_ENV=development

# Admin Dashboard URL
NUXT_PUBLIC_ADMIN_DASHBOARD_URL=http://localhost:8000/admin-dashboard/

# Exam Settings
NUXT_PUBLIC_WRITING_TIME_LIMIT=3600  # 60 minutes in seconds
NUXT_PUBLIC_SPEAKING_TIME_LIMIT=900   # 15 minutes in seconds

# Audio Recording Settings
NUXT_PUBLIC_SPEAKING_PART1_DURATION=180  # 3 minutes
NUXT_PUBLIC_SPEAKING_PART2_DURATION=240  # 4 minutes
NUXT_PUBLIC_SPEAKING_PART3_DURATION=300  # 5 minutes
