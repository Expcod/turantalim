# Turantalim Production Environment Variables
# Rename this to .env on production server

# Django Core Settings
DEBUG=False
SECRET_KEY=your-super-secret-production-key-change-this
ALLOWED_HOSTS=api.turantalim.uz,www.turantalim.uz

# Database (PostgreSQL)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=turantalim_db
DB_USER=turantalim_user
DB_PASSWORD=strong-database-password-here
DB_HOST=localhost
DB_PORT=5432

# CORS Settings
CORS_ALLOWED_ORIGINS=https://turantalim.uz,https://www.turantalim.uz,https://api.turantalim.uz
CORS_ALLOW_CREDENTIALS=True

# CSRF Settings
CSRF_TRUSTED_ORIGINS=https://api.turantalim.uz,https://turantalim.uz

# Media & Static Files
MEDIA_URL=/media/
STATIC_URL=/static/
MEDIA_ROOT=/home/user/turantalim/media
STATIC_ROOT=/home/user/turantalim/static

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
X_FRAME_OPTIONS=DENY
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# Email Settings (Gmail SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=noreply@turantalim.uz
EMAIL_HOST_PASSWORD=your-gmail-app-password
DEFAULT_FROM_EMAIL=Turantalim <noreply@turantalim.uz>
SERVER_EMAIL=server@turantalim.uz

# Admin Settings
ADMINS=Admin:admin@turantalim.uz

# Redis Cache (optional)
REDIS_URL=redis://localhost:6379/0
CACHE_BACKEND=django_redis.cache.RedisCache

# Celery (if using background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# File Upload Limits
DATA_UPLOAD_MAX_MEMORY_SIZE=104857600  # 100MB
FILE_UPLOAD_MAX_MEMORY_SIZE=104857600  # 100MB

# Logging
LOG_LEVEL=INFO

# Sentry (Error Tracking - optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60  # minutes
JWT_REFRESH_TOKEN_LIFETIME=7  # days
